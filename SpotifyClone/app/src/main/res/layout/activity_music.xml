<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PlayMusicActivity">
    <ImageView
        android:id="@+id/imageShan"
        android:layout_width="match_parent"
        android:src="@drawable/ic_shreyasghosle"
        android:scaleType="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvShanSong"
        android:layout_width="match_parent"
        android:text="popular Song"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnPlaysong"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="150dp"
            android:background="@drawable/ic_download__7_"
            android:onClick="play"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/btnStopSong"
            android:layout_width="50dp"
            android:layout_toEndOf="@+id/btnPlaysong"
            android:layout_marginStart="50dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_images__2_"
            android:onClick="stop"
            android:layout_height="50dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imagearijit"
        android:layout_width="match_parent"
        android:src="@drawable/ic_arijit"
        android:scaleType="center"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnPlaysong1"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="150dp"
            android:background="@drawable/ic_download__7_"
            android:onClick="play"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/btnStopSong2"
            android:layout_width="50dp"
            android:layout_toEndOf="@+id/btnPlaysong1"
            android:layout_marginStart="50dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_images__2_"
            android:onClick="stop"
            android:layout_height="50dp"/>

    </RelativeLayout>



</LinearLayout>